<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JetpackComposeSvastara" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/GreenAccent</item>
        <item name="background">@color/DarkGray</item>
        <item name="colorOnBackground">@color/TextWhite</item>
        <item name="colorOnPrimary">@color/DarkGray</item>
        <item name="colorSurface">@color/MediumGray</item>
        <item name="colorOnSurface">@color/LightGray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/DarkGray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JetpackComposeSvastara.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JetpackComposeSvastara.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JetpackComposeSvastara.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>